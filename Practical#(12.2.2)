# include<iostream>

using namespace std;

int main(){
    int a;
    cout<<"Enter 1 if you want to see the list of even numbers from 1 to    1000"<<endl;
    
    cout<<"Enter 2 if you want to see the list of even numbers from 1000 to 1"<<endl;
    
    cout<<"Enter 3 if you want to see the list of odd numbers from 1 to 1000"<<endl;
    cout<<"enter 4 if you want to see  the list of odd numbers from 1000 to 1"<<endl;
    cin>>a;
if(a==1){
		cout <<"this is for loop for even numbers from 1-1000"<<endl;
	for(int i=0;i<=1000;i=i+2){
		cout<<i<<endl;
	}
}
else if(a==2){
	cout<<"this is for loop for even numbers from 1000-1"<<endl;
	for (int a=1000;a>0;a=a-2){
		cout<<a<<endl;
	}
}
else if(a==3){
	cout<<"this loop is for odd numbers from 1-1000"<<endl;
	for (int b=1;b<1000; b=b+2){
		cout<<b<<endl;
	}
}
else if(a==4){
		cout<<"this loop is for odd numbers from 1000-1"<<endl;
	for (int b=1001;b>1; b=b-2){
		cout<<b<<endl;
	}
}
else{
    cout<<"invalid input";
}
}
