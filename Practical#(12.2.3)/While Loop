#include <iostream>
using namespace std;

int main() {
    int i;
    
    while(true){
        cout<<"Enter number to continue and char to exit\t";
        cin>>i;
        
if(cin.fail()){  
        cout<<"you have enter a char ";
        break;
    }
    
    else{
        cout<<"you have enter a number "<<i<<endl;
        continue;
        
    }
    }

    return 0;
}
