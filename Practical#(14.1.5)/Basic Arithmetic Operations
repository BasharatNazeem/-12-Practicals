#include<iostream>
#include<cmath>
using namespace std;
int main(){
	float a,b;
	cout<<"Enter value for a"<<endl;
	cin>>a;
	cout<<"Enter value for b"<<endl;
	cin>>b;
	
	int add,sub,mul; 
	float div;
	add=a+b;
	sub=a-b;
	mul=a*b;
	div=a/b;
	
	cout<<"BY ADDING A AND B WE GET "<<add<<endl;
	cout<<"BY SUBTRACTIONG A AND B WE GET "<<sub<<endl;
	cout<<"BY MULTIPLYING A AND B WE GET "<<mul<<endl;
	cout<<"BY DIVIDING A AND B WE GET "<<div<<endl;
	
	
}
